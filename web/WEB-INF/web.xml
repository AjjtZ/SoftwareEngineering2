<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignUpPetOwnerServlet</servlet-name>
        <servlet-class>servlet.SignUpPetOwnerServlet</servlet-class>
        <init-param>
            <param-name>dbDriver</param-name>
            <param-value>com.mysql.cj.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>dbUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/khoclinic?useSSL=false</param-value>
        </init-param>
        <init-param>
            <param-name>dbUsername</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>1234</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
        <init-param>
            <param-name>dbDriver</param-name>
            <param-value>com.mysql.cj.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>dbUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/khoclinic?useSSL=false</param-value>
        </init-param>
        <init-param>
            <param-name>dbUsername</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>1234</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>SignUpEmployeeServlet</servlet-name>
        <servlet-class>servlet.SignUpEmployeeServlet</servlet-class>
        <init-param>
            <param-name>dbDriver</param-name>
            <param-value>com.mysql.cj.jdbc.Driver</param-value>
        </init-param>
        <init-param>
            <param-name>dbUrl</param-name>
            <param-value>jdbc:mysql://localhost:3306/khoclinic?useSSL=false</param-value>
        </init-param>
        <init-param>
            <param-name>dbUsername</param-name>
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <param-name>dbPassword</param-name>
            <param-value>1234</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpPetOwnerServlet</servlet-name>
        <url-pattern>/SignUpPetOwnerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpEmployeeServlet</servlet-name>
        <url-pattern>/SignUpEmployeeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>landing.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>encryptionKey</param-name>
        <param-value>1234567890123456</param-value>
    </context-param>
    <context-param>
        <param-name>encryptionCipher</param-name>
        <param-value>AES/ECB/PKCS5Padding</param-value>
    </context-param>
    <context-param>
        <param-name>encryptionSecretKey</param-name>
        <param-value>AES</param-value>
    </context-param>
</web-app>
